pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Shilpakcap/TestJenkin.git'
            }
        }
        stage('Run Python Scripts') {
            steps {
                script {
                    def pythonPath = "C:\\Users\\shilpkul\\AppData\\Local\\Programs\\Python\\Python313\\python.exe"
                    def scriptDir = "C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\Employee_Page\\Scripts"
                    
                    // Use PowerShell to list Python files
                    def fileList = bat(script: "powershell -Command \"Get-ChildItem -Path '${scriptDir}' -Filter '*.py' | ForEach-Object { $_.Name }\"", returnStdout: true).trim()
                    
                    if (fileList) {
                        def files = fileList.split("\r?\n")
                        
                        for (file in files) {
                            echo "Running script: ${file}"
                            bat "\"${pythonPath}\" \"${scriptDir}\\${file}\""
                        }
                    } else {
                        echo "No Python scripts found in ${scriptDir}"
                    }
                }
            }
        }
    }
}
